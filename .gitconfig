[include]
    path = ~/.gitconfig.local
[core]
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes
	ignorecase = false
	editor = nvim
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[diff "image"]
	# command = ~/.bin/sh/git-imgdiff
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[color]
	ui = true
[alias]
    tree = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lga = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[http]
	postBuffer = 524288000
[commit]
	template = ~/.gitmessage
