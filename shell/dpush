#!/bin/sh

cd /0CheatSheet
git add .
git commit -m "data update: "`date +%Y_%m_%d_%H`
git push origin master


cd ~/dotfiles
# .vimrcを他ファイルに適応
\cp -f .vimrc .xvimrc
sed -i -e 's/noremap\ j\ gj/\"noremap\ j\ gj/g' .xvimrc
sed -i -e 's/noremap\ k\ gk/\"noremap\ k\ gk/g' .xvimrc
sed -i -e 's/noremap\ gj\ j/noremap\ gj\ i\<Down\>\<Esc\>\<Right\>/g' .xvimrc
sed -i -e 's/noremap\ gk\ k/noremap\ gk\ i\<Up\>\<Esc\>\<Right\>/g' .xvimrc
sed -i -e 's/QuickRun/run/g' .xvimrc
sed -i -e 's/Leader/Space/' .xvimrc
echo 'set hlsearch' >> .xvimrc
echo 'set relativenumber' >> .xvimrc
echo 'nnoremap <Space>h :xhelp<Cr>' >> .xvimrc
echo 'nnoremap <C-n> :nissue<Cr>' >> .xvimrc
echo 'nnoremap <C-p> :pissue<Cr>' >> .xvimrc
echo 'nnoremap <Space>a :ncounterpart<Cr>' >> .xvimrc
echo 'nnoremap <Space>b :xccmd toggleBreakpointAtCurrentLine<Cr>' >> .xvimrc
echo 'nnoremap <C--><C--> :xccmd commentAndUncommentCurrentLines<Cr>' >> .xvimrc
echo 'nnoremap <Space>s :xccmd showInFinder<Cr>' >> .xvimrc
echo 'nnoremap sn :xccmd selectNextTab<Cr>' >> .xvimrc
echo 'nnoremap sp :xccmd selectPreviousTab<Cr>' >> .xvimrc
echo 'nnoremap <Space>f viw:xccmd findSelectedTextInWorkspace<Cr>' >> .xvimrc
echo 'nnoremap <C-h> :xccmd toggleNavigatorsVisibility<Cr>' >> .xvimrc
echo 'nnoremap <C-j> :xccmd toggleDebuggerVisibility<Cr>' >> .xvimrc
echo 'nnoremap <C-k> :xccmd toggleToolbarShown' >> .xvimrc
echo 'nnoremap <C-l> :xccmd toggleUtilitiesVisibility<CR>' >> .xvimrc

# echo 'nnoremap <Space>y :xctabctrl hideUtilitiesArea:<Cr>' >> .xvimrc
# echo 'nnoremap <Space>t :xctabctrl showUtilitiesArea:<Cr>' >> .xvimrc

rm -f .xvimrc-e

git add .
git commit -m "data update: "`date +%Y_%m_%d_%H`
git push origin master
